@model IEnumerable<GridMoment.UI.WebSite.Models.AccountsPrevievViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PHP myAdmin</h2>

<head>
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/libs/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Styles/header.css" rel="stylesheet" />
    <link href="~/Styles/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid admin-panel">
        <div class="row admin-panel">
            
            <div class="col-xs-8 col-xs-offset-1 row">
            @using (Html.BeginForm("Search", "Admin", FormMethod.Post))
            {
                <div class="col-xs-4">
                    <input name="nameOfUser" type="text" class="form-control">
                </div>

                <div class="col-xs-1">
                    <button type="submit" class="btn btn-default">Поиск</button>
                </div> 
            }
            </div>
            <div class="col-xs-8 col-xs-offset-1">
                <div class="row">
                    <div class="col-xs-3 columns">
                        <label>Логин пользователя</label>
                    </div>
                    <div class="col-xs-4 columns">
                        <label>Роль пользователя</label>
                    </div>
                </div>
            </div>
            <div class="col-xs-8 col-xs-offset-1">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-xs-3 columns">
                            @Html.DisplayFor(modelItem => item.Login)
                        </div>
                        <div class="col-xs-3 columns">
                            @Html.DisplayFor(modelItem => item.Role)
                        </div>
                        <div class="col-xs-6 columns">
                            <button class="btn btn-default">
                                @Html.ActionLink("Сделать модератором", "UpdateRole", new { accountId = item.Id }, new { @class = "ajax-loading" })
                            </button>
                            <button class="btn btn-default">
                                @Html.ActionLink("Подробнее", "Details", new { name = item.Login }, new { @class = "ajax-loading" })
                            </button>
                            <button class="btn btn-default">
                                @Html.ActionLink("Удалить", "Delete", new { name = item.Login }, new { @class = "ajax-loading" })
                            </button>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</body>
