@model GridMoment.UI.WebSite.Models.PostViewModel
@{
    ViewBag.Title = "AddPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Styles/libs/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/libs/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Styles/header.css" rel="stylesheet" />
    <link href="~/Styles/addpost.css" rel="stylesheet" />
</head>
<div class="container-fluid main-content">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container col-centered">
            @using (Html.BeginForm("Add", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="text-center">Создай новый пост</h2>
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div id="temp3" class="row">
                        <div class="row">
                            <h3 class="col-xs-offset-2">Ждём ваших теплых слов...</h3>
                        </div>
                        <div class="col-xs-4 text-right">
                            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-xs-5">
                            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div id="temp3" class="row">
                        <div class="row">
                            <h3 class="col-xs-offset-2">Дайте эмоциям название</h3>
                        </div>
                        <div class="col-xs-4 text-right">
                            @Html.LabelFor(model => model.NamePost, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-xs-5">
                            <p>
                                @Html.EditorFor(model => model.NamePost, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NamePost, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                    <!--Основная картинка поста-->
                    <div class="row">
                        <div class="col-xs-6 col-xs-offset-4">
                            <input class="filestyle" type="file" name="uploadImage" data-input="false" data-buttonText="Выбрать изображение" />
                        </div>
                    </div>

                    <div id="temp4" class="row">
                        <div class="row">
                            <h3 class="col-xs-offset-2">Добавьте метки</h3>
                        </div>
                        <div class="col-xs-4 text-right">
                            @Html.LabelFor(model => model.TagsAddiction, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-xs-5">
                            <p>
                                @Html.EditorFor(model => model.TagsAddiction, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TagsAddiction, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-4">
                            <input class="btn btn-default" type="submit" value="Создать" />
                        </div>
                    </div>
                    

                </div>
            }
        </div>
    }

</div>

@section scripts {
    <script>
        $(":file").filestyle({ buttonText: "Выбрать файл" });
    </script>
    <script src="~/Scripts/addprofile.js"></script>
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/libs/bootstrap-filestyle.min.js"></script>
    <script src="~/Scripts/addprofile.js"></script>  
}