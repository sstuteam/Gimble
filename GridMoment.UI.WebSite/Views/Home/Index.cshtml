    <header class="headhesive row">
        <!--logotype-->

        <a href="@Url.Action("Index", "Home")" class="logo_pull-left">
            <div id="head-logo" href=#></div>
        </a>
        @if (User.Identity.IsAuthenticated)
        {
            <ul class="profile-button list-unstyled pull-right">
                <li class="dropdown">
                    <a class="drop-btn dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span>
                        @User.Identity.Name
                        <span class="glyphicon glyphicon-triangle-bottom"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li> @Html.ActionLink("Мой профиль", "Index", "Profile") </li>
                        <li> @Html.ActionLink("Настройки", "Index", "Settings")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Выйти из себя", "Logout", "Account") </li>
                    </ul>
                </li>
            </ul>
        }
    </header>
            
        <!--Логотип + Панель регистрации-->
        <div class=" col-xs-12 full-height top-background-image">
            <div>
